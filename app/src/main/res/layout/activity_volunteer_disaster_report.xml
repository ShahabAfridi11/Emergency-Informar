<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VolunteerDisasterReport">

    <EditText
        android:id="@+id/deaths"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="86dp"
        android:layout_marginTop="223dp"
        android:layout_marginEnd="112dp"
        android:hint="Deaths"
        android:ems="10"
        android:inputType="number" />

    <EditText
        android:id="@+id/injuries"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/deaths"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:hint="Injuries"
        android:layout_marginStart="90dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="108dp"
        android:ems="10"
        android:inputType="number" />

    <EditText
        android:id="@+id/saves"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/injuries"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="90dp"
        android:hint="Saved"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="108dp"
        android:ems="10"
        android:inputType="number" />

    <EditText
        android:id="@+id/cars"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/saves"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="90dp"
        android:layout_marginTop="24dp"
        android:hint="Cars Damages"
        android:layout_marginEnd="108dp"
        android:ems="10"
        android:inputType="number" />
    <EditText
        android:id="@+id/buildings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cars"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="90dp"
        android:layout_marginTop="24dp"
        android:hint="Building Damages"
        android:layout_marginEnd="108dp"
        android:ems="10"
        android:inputType="number" />

    <Button
        android:id="@+id/report"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buildings"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="0dp"
        android:onClick="reportbtnclick"
        android:text="Report" />
</RelativeLayout>